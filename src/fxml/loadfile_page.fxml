<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
	xmlns:fx="http://javafx.com/fxml" fx:controller="com.jfruit.controller.AddWindowController">
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<Label style="-fx-font: NORMAL 20 Tahoma;" text="New Fruit "
		GridPane.columnIndex="0" GridPane.rowIndex="0">
	</Label>

	<VBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0"
		GridPane.rowIndex="1">
		<TextField fx:id="fruitName" promptText="Fruit Name"
			prefWidth="90" />
		<TextField fx:id="fruitAmt" promptText="Fruit Amount"
			prefWidth="90" />
		<Button text="Add" onAction="#hanleAddFruitAction" />
	</VBox>

	<Button text="Go Back to Editor Window" onAction="#hanleGoBackFruitAction"
		GridPane.columnIndex="0" GridPane.rowIndex="2" />

	<Text fx:id="actiontarget" GridPane.columnIndex="1"
		GridPane.rowIndex="7" />
</GridPane>
